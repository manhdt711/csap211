@{
}
@using Q3.Models
<html>
    <head>
        
    </head>
    <body>
        <h1>List of contract</h1>
    <form id="selectForm" action="@Url.Action("Index", "Contract")" method="post">
        <select id="employeeSelect" name="employeeId" onchange="document.getElementById('selectForm').submit()">
            <option value="">Select employee</option>
            @foreach (Employee emp in ViewBag.EmpList)
            {
                <option value="@emp.EmployeeId">@emp.EmployeeName</option>
            }
        </select>
    </form>
        <table>
            <tr>
                <td>Code</td>
                <td>Customer</td>
                <td>Employee</td>
                <td>Type</td>
                <td>SignedDate</td>
            </tr>
            @foreach(Contract con in ViewBag.ConList)
            {
            <tr>
                <td>@con.Code</td>
                <td>@con.Customer.CustomerName</td>
                <td>@con.Employee.EmployeeName</td>
                <td>@con.Type</td>
                <td>@con.SignedDate</td>
            </tr>
        }
        </table>
    </body>
</html>
